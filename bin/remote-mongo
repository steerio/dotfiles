#!/usr/bin/env ruby
# vim: filetype=ruby

def read_config
  opts = ARGV.size == 1 ? "--app #{ARGV[0]}" : ARGV.join(' ')
  IO.popen "heroku config -s #{opts}", "r" do |io|
    io.each_line do |line|
      if m = line.scan(%r{^(MONGO.*?)='{0,1}(mongodb(\+[a-z]+){0,1}://.+?)'{0,1}$}).first
        res = m[1].sub(%r{,[^/]+/}, '/')
        STDERR.puts "Found #{m.first}: #{res}"
        return res
      end
    end
  end
  nil
end

config = read_config
if config
  exec "mongo '#{config}'"
end

