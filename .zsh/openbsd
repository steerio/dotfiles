# vim: filetype=zsh

PATH=$HOME/bin:/usr/local/bin:/usr/local/sbin:/usr/bin:/bin:/usr/sbin:/sbin:/usr/X11R6/bin
JAVA_HOME=${$(echo /usr/local/jdk-*)[(w)1]}

if [[ -n $JAVA_HOME ]]; then
  PATH=$JAVA_HOME/bin:$PATH
  export JAVA_HOME
fi
export PATH

LANG=en_US.UTF-8
LC_CTYPE=$LANG
export LANG LC_CTYPE

alias ls='ls -F'
